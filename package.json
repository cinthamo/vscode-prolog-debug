{
    "name": "prolog-debug",
    "displayName": "Prolog Debugger",
    "version": "0.1.1",
    "publisher": "cinthamo",
    "description": "Prolog debugger for VS Code. It needs to be compiled on prolog-tools's BLint with debug mode.",
    "author": {
        "name": "Cristian Inthamoussu"
    },
    "license": "MIT",
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.66.0"
    },
    "icon": "images/prolog.png",
    "categories": [
        "Debuggers"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/cinthamo/vscode-prolog-debug.git"
    },
    "bugs": {
        "url": "https://github.com/cinthamo/vscode-prolog-debug/issues"
    },
    "scripts": {
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/extension.js",
        "watch": "npm run -S esbuild-base -- --sourcemap --sources-content=false --watch",
        "build": "npm run -S esbuild-base -- --sourcemap --sources-content=false",
        "build-server": "npx webpack",
        "package": "vsce package",
        "publish": "vsce publish",
        "publish-pre-release": "vsce publish --pre-release",
        "vscode:prepublish": "rimraf dist && npm run -S esbuild-base -- --minify",
        "test": "npm run typecheck"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^14.14.37",
        "@types/vscode": "^1.66.0",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "@vscode/debugadapter": "^1.56.0",
        "@vscode/debugadapter-testsupport": "^1.56.0",
        "await-notify": "^1.0.1",
        "base64-js": "^1.5.1",
        "esbuild": "^0.14.29",
        "eslint": "^8.12.0",
        "events": "^3.3.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "path-browserify": "^1.0.1",
        "rimraf": "^3.0.2",
        "ts-loader": "^9.5.1",
        "typescript": "^4.9.5",
        "url": "^0.11.0",
        "vsce": "^2.7.0",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "main": "./dist/extension.js",
    "activationEvents": [
        "onDebugResolve:prolog",
        "onDebugDynamicConfigurations:prolog"
    ],
    "workspaceTrust": {
        "request": "never"
    },
    "contributes": {
        "languages": [{
            "id": "ari",
            "extensions": [
                ".ari"
            ],
            "aliases": [
                "Prolog"
            ]
        }],
        "breakpoints": [{
            "language": "ari"
        }],
        "debuggers": [{
            "type": "prolog",
            "languages": [
                "ari"
            ],
            "label": "Prolog Debug",
            "program": "./out/debugAdapter.js",
            "runtime": "node",
            "configurationAttributes": {                
                "attach": {
                    "required": [ "debugServer" ],
                    "properties": {
                        "debugServer": {
                            "type": "number",
                            "description": "Port number of the debug server.",
                            "default": 4711
                        },
                        "writeLog": {
                            "type": "boolean",
                            "description": "Write a log file.",
                            "default": true
                        },
                        "stopOnEntry": {
                            "type": "boolean",
                            "description": "Automatically stop after attach.",
                            "default": true
                        }
                    }
                }
            },
            "initialConfigurations": [{
                "name": "Prolog Debugger",
                "type": "prolog",
                "request": "attach",
                "stopOnEntry": true,
                "writeLog": true,
                "debugServer": 4711
            }],
            "configurationSnippets": [{
                "label": "Prolog Debug: Launch",
                "description": "A new configuration for 'debugging' a user selected prolog file.",
                "body": {
                    "name": "Prolog Debugger",
                    "type": "prolog",
                    "request": "attach",
                    "stopOnEntry": true,
                    "writeLog": true,
                    "debugServer": 4711
                }
            }]
        }]
    },
    "dependencies": {
        "bufferutil": "^4.0.8",
        "utf-8-validate": "^6.0.3",
        "ws": "^8.14.2"
    }
}